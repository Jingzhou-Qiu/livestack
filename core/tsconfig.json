{
  "include": ["missing-modules.d.ts", "**/*.ts", "**/*.tsx", "*.ts", "*.tsx"],
  "compilerOptions": {
    "module": "ES2020",
    "outDir": "dist",
    "target": "ES2020",
    "rootDir": "src",
    "pretty": true,
    "moduleResolution": "Bundler",
    "noEmit": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "paths": {
      "@livestack/core": ["./src"]
    },
    "strictNullChecks": true,
    "downlevelIteration": true,
    "declaration": true,
    "jsx": "react",
    "noImplicitAny": true
    // "emitDecoratorMetadata": true,
    // "experimentalDecorators": true
  },
  "exclude": ["node_modules", "dist", "*.mp3", "*.mp4"]
}
